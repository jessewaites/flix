
<h1><%= pluralize(@events.size, 'Event') %> Coming Soon!</h1>
<%= button_to "Add New Event", new_event_path, class: "button", :method => :get %>



<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= link_to(event.name, event) %></h2>
      <%= image_for(event) %>
      <h3><%= pluralize(event.capacity, 'spot') %></h3>
    </header>
      <p>
        <%= truncate(event.description, length: 120, seperator: ' ') %>
      </p>
      <table>
        <tr>
          <th>When:</th>
          <td><%= event.starts_at %></td>
        </tr>
        <tr>
          <th>Where:</th>
          <td><%= event.location %><td>
        </tr>
        <tr>
          <th>Price:</th>
          <td><%= format_price(event) %></td>
        </tr>
      </table>
      <br>
      <hr>
  </article>
<% end %>