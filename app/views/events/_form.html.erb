<%= form_for(@event) do |f| %>
  <p>
    <%= f.label :name, title: "Enter Your Information", data: {tooltip: true}  %><br/>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :description, title: "Enter Your Information", data: {tooltip: true} %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :location, title: "Enter Your Information", data: {tooltip: true} %><br/>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :price, title: "Enter Your Information", data: {tooltip: true} %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :starts_at, title: "Enter Your Information", data: {tooltip: true} %><br/>
    <%= f.datetime_select :starts_at %>
  </p>
   <p>
    <%= f.label :image_file_name, title: "Enter Your Information", data: {tooltip: true} %><br/>
    <%= f.text_field :image_file_name, size: 30,
    placeholder: "Gif, JPG, or PNG file name" %>
  </p>
   <p>
   <%= f.label :capacity, title: "Enter Your Information", data: {tooltip: true} %><br/>
   <%= f.number_field :capacity %>
  </p>
    <ul-class "button-group">
    <%= f.submit 'Add Event', :class => 'button' %>
    <%= link_to "Cancel", events_path, class: "button", :method => :get %></ul>
<% end %>